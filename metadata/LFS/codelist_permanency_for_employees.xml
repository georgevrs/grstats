                    <common:Name xml:lang="en">Permanent job</common:Name>
                    <common:Description xml:lang="en">Employment with no predetermined end date or with a contract of unlimited duration</common:Description>
                </structure:Code>
                
                <structure:Code id="TEMPORARY_CONTRACT">
                    <common:Name xml:lang="en">Temporary/contract of limited duration</common:Name>
                    <common:Description xml:lang="en">Employment with a predetermined end date or contract of limited duration</common:Description>
                </structure:Code>
                
                <structure:Code id="DURATION_TEMPORARY">
                    <common:Name xml:lang="en">Duration of temporary job</common:Name>
