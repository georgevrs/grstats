                <common:Name xml:lang="en">Permanency for Employees</common:Name>
                <common:Description xml:lang="en">Classification of job permanency for employees, distinguishing between permanent and temporary employment arrangements.</common:Description>
                
                <structure:Code id="_Z">
                    <common:Name xml:lang="en">Not applicable</common:Name>
                    <common:Description xml:lang="en">Not applicable or not specified</common:Description>
                </structure:Code>
                
