<!-- SDMX-XML 2.1 – DSD SEL03 (ELSTAT) -->
<message:Structure
    xmlns:message="http://www.sdmx.org/resources/sdmxml/schemas/v2_1/message"
    xmlns:structure="http://www.sdmx.org/resources/sdmxml/schemas/v2_1/structure"
    xmlns:common="http://www.sdmx.org/resources/sdmxml/schemas/v2_1/common">

    <!-- ========= HEADER ========= -->
    <message:Header>
        <message:ID>IDSEL03</message:ID>
        <message:Test>false</message:Test>
        <message:Prepared>2025-08-23T00:00:00+03:00</message:Prepared>
        <message:Sender id="ELSTAT"/>
        <message:Receiver id="Unknown"/>
    </message:Header>

    <!-- ========= STRUCTURE ========= -->
    <message:Structures>
        <structure:DataStructures>

            <structure:DataStructure id="DSD_CST_ELSTAT" agencyID="BOG" version="1.0" isFinal="true">

                <common:Name xml:lang="en">Construction Indices (CST*) – DSD</common:Name>

                <!-- ===== COMPONENTS ===== -->
                <structure:DataStructureComponents>

                    <!-- === DIMENSIONS (ordered) === -->
                    <structure:DimensionList id="DimensionDescriptor">

                        <!-- 1 -->
                        <structure:Dimension id="FREQ" position="1">
                            <structure:ConceptIdentity>
                                <Ref id="FREQ" maintainableParentID="CS_CST_ELSTAT" agencyID="BOG"
                                     package="conceptscheme" class="Concept"/>
                            </structure:ConceptIdentity>
                            <structure:LocalRepresentation>
                                <structure:Enumeration>
                                    <Ref id="CL_FREQ" version="2.1" agencyID="SDMX"
                                         package="codelist" class="Codelist"/>
                                </structure:Enumeration>
                                <structure:EnumerationFormat textType="String" minLength="1" maxLength="1"/>
                            </structure:LocalRepresentation>
                        </structure:Dimension>

                        <!-- 2 -->
                        <structure:Dimension id="REF_AREA" position="2">
                            <structure:ConceptIdentity>
                                <Ref id="REF_AREA" maintainableParentID="CS_CST_ELSTAT" agencyID="BOG"
                                     package="conceptscheme" class="Concept"/>
                            </structure:ConceptIdentity>
                            <structure:LocalRepresentation>
                                <structure:Enumeration>
                                    <Ref id="GEO" version="25.0" agencyID="ESTAT"
                                         package="codelist" class="Codelist"/>
                                </structure:Enumeration>
                                <structure:EnumerationFormat textType="String" minLength="2" maxLength="6"/>
                            </structure:LocalRepresentation>
                        </structure:Dimension>

                        <!-- 3 -->
                        <structure:Dimension id="INDEX" position="3">
                            <structure:ConceptIdentity>
                                <Ref id="INDEX" maintainableParentID="CS_CST_ELSTAT" agencyID="BOG"
                                     package="conceptscheme" class="Concept"/>
                            </structure:ConceptIdentity>
                            <structure:LocalRepresentation>
                                <!-- Using index-type list (CSTO, CSTI, CSTM, CSTL) -->
                                <structure:Enumeration>
                                    <Ref id="CL_INDEX_TYPE" version="2.6.0" agencyID="IMF"
                                         package="codelist" class="Codelist"/>
                                </structure:Enumeration>
                                <structure:EnumerationFormat textType="String" minLength="3" maxLength="5"/>
                            </structure:LocalRepresentation>
                        </structure:Dimension>

                        <!-- 4 -->
                        <structure:Dimension id="WORK_CATEGORY" position="4">
                            <structure:ConceptIdentity>
                                <Ref id="WORK_CATEGORY" maintainableParentID="CS_CST_ELSTAT" agencyID="BOG"
                                     package="conceptscheme" class="Concept"/>
                            </structure:ConceptIdentity>
                            <structure:LocalRepresentation>
                                <!-- ELSTAT codelist with 00, 01–17 -->
                                <structure:Enumeration>
                                    <Ref id="CL_CSTO_17" version="1.0" agencyID="ELSTAT"
                                         package="codelist" class="Codelist"/>
                                </structure:Enumeration>
                                <structure:EnumerationFormat textType="String" minLength="2" maxLength="2"/>
                            </structure:LocalRepresentation>
                        </structure:Dimension>

                        <!-- 5 -->
                        <structure:Dimension id="ADJUSTMENT" position="5">
                            <structure:ConceptIdentity>
                                <Ref id="ADJUSTMENT" maintainableParentID="CS_CST_ELSTAT" agencyID="BOG"
                                     package="conceptscheme" class="Concept"/>
                            </structure:ConceptIdentity>
                            <structure:LocalRepresentation>
                                <!-- Typically N (non-seasonally adjusted) -->
                                <structure:Enumeration>
                                    <Ref id="CL_ADJUSTMENT" version="1.4" agencyID="IMF"
                                         package="codelist" class="Codelist"/>
                                </structure:Enumeration>
                                <structure:EnumerationFormat textType="String" minLength="1" maxLength="1"/>
                            </structure:LocalRepresentation>
                        </structure:Dimension>

                        <!-- 6 -->
                        <structure:Dimension id="UNIT_MEASURE" position="6">
                            <structure:ConceptIdentity>
                                <Ref id="UNIT_MEASURE" maintainableParentID="CS_CST_ELSTAT" agencyID="BOG"
                                     package="conceptscheme" class="Concept"/>
                            </structure:ConceptIdentity>
                            <structure:LocalRepresentation>
                                <!-- I2021=100, I2015=100, PC (if % changes are disseminated) -->
                                <structure:Enumeration>
                                    <Ref id="CL_UNIT" version="2.7.0" agencyID="IMF"
                                         package="codelist" class="Codelist"/>
                                </structure:Enumeration>
                            </structure:LocalRepresentation>
                        </structure:Dimension>


                        <!-- 8 – mandatory TIME DIMENSION -->
                        <structure:TimeDimension id="TIME_PERIOD" position="7">
                            <structure:ConceptIdentity>
                                <Ref id="TIME_PERIOD" maintainableParentID="CS_CST_ELSTAT" agencyID="BOG"
                                     package="conceptscheme" class="Concept"/>
                            </structure:ConceptIdentity>
                            <structure:LocalRepresentation>
                                <structure:TextFormat textType="ObservationalTimePeriod"/>
                            </structure:LocalRepresentation>
                        </structure:TimeDimension>

                    </structure:DimensionList>

                    <!-- === MEASURE === -->
                    <structure:MeasureList id="MeasureDescriptor">
                        <structure:PrimaryMeasure id="OBS_VALUE">
                            <structure:ConceptIdentity>
                                <Ref id="OBS_VALUE" maintainableParentID="CS_CST_ELSTAT" agencyID="BOG"
                                     package="conceptscheme" class="Concept"/>
                            </structure:ConceptIdentity>
                            <structure:LocalRepresentation>
                                <structure:TextFormat textType="Double"/>
                            </structure:LocalRepresentation>
                        </structure:PrimaryMeasure>
                    </structure:MeasureList>

                    <!-- No AttributeList: UNIT_MEASURE and BASE_YEAR are modelled as dimensions -->
                </structure:DataStructureComponents>
            </structure:DataStructure>

        </structure:DataStructures>
    </message:Structures>
</message:Structure>
