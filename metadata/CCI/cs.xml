<!-- SDMX-XML 2.1 – Concept Scheme for Construction Indices (ELSTAT) -->
<message:Structure
    xmlns:message="http://www.sdmx.org/resources/sdmxml/schemas/v2_1/message"
    xmlns:structure="http://www.sdmx.org/resources/sdmxml/schemas/v2_1/structure"
    xmlns:common="http://www.sdmx.org/resources/sdmxml/schemas/v2_1/common">

    <!-- ========== HEADER ========== -->
    <message:Header>
        <message:ID>IDSEL03_CS</message:ID>
        <message:Test>false</message:Test>
        <message:Prepared>2025-08-23T00:00:00+03:00</message:Prepared>
        <message:Sender id="ELSTAT"/>
        <message:Receiver id="Unknown"/>
    </message:Header>

    <!-- ========== STRUCTURES ========== -->
    <message:Structures>
        <structure:Concepts>

            <structure:ConceptScheme id="CS_CST_ELSTAT" agencyID="BOG" version="1.0" isFinal="true">
                <common:Name xml:lang="en">Construction Indices (CST*) – Concept Scheme</common:Name>
                <common:Description xml:lang="en">Concepts for ELSTAT construction indices (CSTO/CSTI/CSTM/CSTL). National extensions use ELSTAT codelists where noted.</common:Description>

                <!-- ========= CONCEPTS ========= -->

                <!-- 1 -->
                <structure:Concept id="FREQ">
                    <common:Name xml:lang="en">Frequency</common:Name>
                    <common:Description xml:lang="en">Reference period frequency (e.g. quarterly, monthly).</common:Description>
                    <structure:CoreRepresentation>
                        <structure:Enumeration>
                            <Ref id="CL_FREQ" version="2.1" agencyID="SDMX"
                                 package="codelist" class="Codelist"/>
                        </structure:Enumeration>
                    </structure:CoreRepresentation>
                </structure:Concept>

                <!-- 2 -->
                <structure:Concept id="ADJUSTMENT">
                    <common:Name xml:lang="en">Adjustment indicator</common:Name>
                    <common:Description xml:lang="en">Seasonal or calendar adjustment flag.</common:Description>
                    <structure:CoreRepresentation>
                        <structure:Enumeration>
                            <Ref id="CL_ADJUSTMENT" version="1.4" agencyID="IMF"

                                 package="codelist" class="Codelist"/>
                        </structure:Enumeration>
                    </structure:CoreRepresentation>
                </structure:Concept>

                <!-- 3 -->
                <structure:Concept id="REF_AREA">
                    <common:Name xml:lang="en">Reference country / area</common:Name>
                    <structure:CoreRepresentation>
                        <structure:Enumeration>
                            <Ref id="CL_AREA" version="1.0" agencyID="ESTAT"
                                 package="codelist" class="Codelist"/>
                        </structure:Enumeration>
                    </structure:CoreRepresentation>
                </structure:Concept>

                <!-- 4 -->
                <structure:Concept id="INDEX">
                    <common:Name xml:lang="en">Index family</common:Name>
                    <common:Description xml:lang="en">CSTO (Work categories), CSTI (Construction cost), CSTM (Material cost), CSTL (Labour cost).</common:Description>
                    <structure:CoreRepresentation>
                        <structure:Enumeration>
                            <Ref id="CL_INDEX_TYPE" version="2.6.0" agencyID="IMF"
                                 package="codelist" class="Codelist"/>
                        </structure:Enumeration>
                    </structure:CoreRepresentation>
                </structure:Concept>

                <!-- 6 -->
                <structure:Concept id="WORK_CATEGORY">
                    <common:Name xml:lang="en">Work category (CSTO)</common:Name>
                    <common:Description xml:lang="en">Overall index (00) and 17 work categories (01–17).</common:Description>
                    <structure:CoreRepresentation>
                        <structure:Enumeration>
                            <Ref id="CL_CSTO_17" version="1.0" agencyID="ELSTAT"
                                 package="codelist" class="Codelist"/>
                        </structure:Enumeration>
                    </structure:CoreRepresentation>
                </structure:Concept>

                <!-- 7 -->
                <structure:Concept id="UNIT_MEASURE">
                    <common:Name xml:lang="en">Unit of measure</common:Name>
                    <common:Description xml:lang="en">Index base (e.g., I2021=100, I2015=100) or percent changes.</common:Description>
                    <structure:CoreRepresentation>
                        <structure:Enumeration>
                            <Ref id="CL_UNIT" version="2.7.0" agencyID="IMF"
                                         package="codelist" class="Codelist"/>
                        </structure:Enumeration>
                    </structure:CoreRepresentation>
                </structure:Concept>

                <!-- 8 -->
                <structure:Concept id="BASE_YEAR">
                    <common:Name xml:lang="en">Base year</common:Name>
                    <common:Description xml:lang="en">Reference base for index (e.g., 2021, 2015).</common:Description>
                    <structure:CoreRepresentation>
                        <structure:TextFormat textType="String"/>
                    </structure:CoreRepresentation>
                </structure:Concept>

                <!-- 9 -->
                <structure:Concept id="TIME_PERIOD">
                    <common:Name xml:lang="en">Time period</common:Name>
                    <structure:CoreRepresentation>
                        <structure:TextFormat textType="ObservationalTimePeriod"/>
                    </structure:CoreRepresentation>
                </structure:Concept>

                <!-- 10 -->
                <structure:Concept id="OBS_VALUE">
                    <common:Name xml:lang="en">Observation value</common:Name>
                    <structure:CoreRepresentation>
                        <structure:TextFormat textType="Double"/>
                    </structure:CoreRepresentation>
                </structure:Concept>

            </structure:ConceptScheme>
        </structure:Concepts>
    </message:Structures>
</message:Structure>
