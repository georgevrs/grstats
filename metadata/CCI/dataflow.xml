<!-- SDMX-XML 2.1 – Dataflow SEL03 (ELSTAT) -->
<message:Structure
    xmlns:message="http://www.sdmx.org/resources/sdmxml/schemas/v2_1/message"
    xmlns:structure="http://www.sdmx.org/resources/sdmxml/schemas/v2_1/structure"
    xmlns:common="http://www.sdmx.org/resources/sdmxml/schemas/v2_1/common">

    <!-- ========== HEADER ========== -->
    <message:Header>
        <message:ID>IDSEL03_DF</message:ID>
        <message:Test>false</message:Test>
        <message:Prepared>2025-08-23T00:00:00+03:00</message:Prepared>
        <message:Sender id="ELSTAT"/>
        <message:Receiver id="Unknown"/>
    </message:Header>

    <!-- ========== STRUCTURES ========== -->
    <message:Structures>
        <structure:Dataflows>

            <!-- CCI-only dataflow (indices, not prices) -->
            <structure:Dataflow id="ELS-CCI" agencyID="BOG" version="1.0" isFinal="false">

                <!-- ======== Annotations ======== -->
                <common:Annotations>
                    <common:Annotation>
                        <common:AnnotationType>NonProductionDataflow</common:AnnotationType>
                        <common:AnnotationText xml:lang="en">true</common:AnnotationText>
                    </common:Annotation>

                    <!-- Layout suggestion: columns first -->
                    <common:Annotation id="@SDMX">
                        <common:AnnotationTitle>TIME_PERIOD,WORK_CATEGORY</common:AnnotationTitle>
                        <common:AnnotationType>LAYOUT_COLUMN</common:AnnotationType>
                    </common:Annotation>

                    <!-- Defaults: CSTO, quarterly, EL, NSA, base 2021=100 -->
                    <common:Annotation>
                        <common:AnnotationTitle>INDEX=CSTO,FREQ=Q,REF_AREA=EL,ADJUSTMENT=N,UNIT_MEASURE=I2021=100,BASE_YEAR=2021</common:AnnotationTitle>
                        <common:AnnotationType>DEFAULT</common:AnnotationType>
                    </common:Annotation>

                    <!-- Hide fixed/technical fields in UI -->
                    <common:Annotation id="@SDMX">
                        <common:AnnotationTitle>INDEX,BASE_YEAR,OBS_STATUS,CONF_STATUS</common:AnnotationTitle>
                        <common:AnnotationType>NOT_DISPLAYED</common:AnnotationType>
                    </common:Annotation>

                    <!-- External resources (generic ELSTAT links; replace if you have specific CSTO page) -->
                    <common:Annotation>
                        <common:AnnotationType>EXT_RESOURCE</common:AnnotationType>
                        <common:AnnotationText xml:lang="en">
                            Methodology — Price Index of Work Categories (Base 2021=100)|https://www.statistics.gr/|https://upload.wikimedia.org/wikipedia/commons/f/fa/Line-style-icons-calendar-black.svg
                        </common:AnnotationText>
                    </common:Annotation>
                    <common:Annotation>
                        <common:AnnotationType>EXT_RESOURCE</common:AnnotationType>
                        <common:AnnotationText xml:lang="en">
                            Reference Metadata — ELSTAT Publications|https://www.statistics.gr/|https://upload.wikimedia.org/wikipedia/commons/b/b2/NYCS-bull-trans-M_brown.svg
                        </common:AnnotationText>
                    </common:Annotation>
                </common:Annotations>

                <!-- ======== Name & Description ======== -->
                <common:Name xml:lang="en">Price Index of Construction Cost per Work Categories (CCI) — Greece</common:Name>
                <common:Description xml:lang="en">
                    Quarterly index for new residential buildings by work category (CCI), Base year 2021 = 100. 
                    Coverage includes the Overall Index (code 00) and 17 work categories (codes 01–17). 
                    Adjustment: Non-seasonally adjusted (N). Reference area: EL (Greece). Source: Hellenic Statistical Authority (ELSTAT).
                </common:Description>

                <!-- ======== Reference to DSD ======== -->
                <structure:Structure>
                    <Ref id="DSD_CST_ELSTAT" version="1.0" agencyID="BOG"
                         package="datastructure" class="DataStructure"/>
                </structure:Structure>

            </structure:Dataflow>

        </structure:Dataflows>
    </message:Structures>
</message:Structure>
